<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ph.edu.dlsu.lbycpa2.pcbuilderapplication.PCBuilderController">
   <children>
      <AnchorPane fx:id="programPane" prefHeight="500.0" prefWidth="700.0" visible="false">
         <children>
            <ListView fx:id="partsList" layoutX="30.0" layoutY="120.0" prefHeight="318.0" prefWidth="302.0" />
            <AnchorPane layoutX="349.0" layoutY="121.0" prefHeight="142.0" prefWidth="330.0">
               <children>
                  <ImageView fx:id="partImage" fitHeight="151.0" fitWidth="162.0" layoutX="84.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </AnchorPane>
            <Label layoutX="280.0" layoutY="14.0" text="PC BUILDER APPLICATION" />
            <Label fx:id="partLabel" alignment="CENTER" layoutX="140.0" layoutY="42.0" prefHeight="38.0" prefWidth="418.0" text="Central Processing Unit (CPU)">
               <font>
                  <Font size="26.0" />
               </font>
            </Label>
            <Button fx:id="nextButton" layoutX="532.0" layoutY="449.0" mnemonicParsing="false" onAction="#onNextClick" prefHeight="38.0" prefWidth="148.0" text="Next" />
            <Button fx:id="prevButton" disable="true" layoutX="350.0" layoutY="449.0" mnemonicParsing="false" onAction="#onPrevClick" prefHeight="38.0" prefWidth="148.0" text="Previous" />
            <ListView fx:id="specsList" layoutX="350.0" layoutY="315.0" prefHeight="122.0" prefWidth="330.0" />
            <Label layoutX="454.0" layoutY="279.0" text="Specifications">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <AnchorPane fx:id="startPane" prefHeight="500.0" prefWidth="700.0">
         <children>
            <Button layoutX="308.0" layoutY="382.0" mnemonicParsing="false" onAction="#onStartClick" prefHeight="26.0" prefWidth="84.0" text="Start" />
            <Label layoutX="161.0" layoutY="155.0" text="Welcome to PC Builder Application!">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label alignment="CENTER" layoutX="233.0" layoutY="334.0" prefHeight="30.0" prefWidth="234.0" text="Click Start to Begin making your computer" wrapText="true" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
